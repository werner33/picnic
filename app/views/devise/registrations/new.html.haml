.container
  .col-md-4.col-md-offset-4
    .devise
      %h2 Sign up
      .fb-login
        = link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook)
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          = f.label :first_name
          %br/
          = f.text_field :first_name, autofocus: true, class: "form-field"
        .field
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, class: "form-field"
        .field
          = f.label :password
          - if @validatable
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "off", class: "form-field"
        .field
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "off", class: "form-field"
        .actions
          = f.submit "Sign up", class: "perfect-red-button"
      = render "devise/shared/links"
