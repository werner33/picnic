<div class="container">
  

<h1>Upcoming Picnics:</h1>


<% @picnics.in_groups_of(2) do |group| %>
  <div class="row">
    <% group.each do |picnic| %>
    <div class="col-md-6" >
      <h2><%= link_to picnic.name, picnic %></h2>
      <%= image_tag picnic.image, height: 300  %>
      <p><%= picnic.show_date %></p>
      <p><%= truncate(picnic.description, length: 160) %></p>
    </div>
    
    <% end %>
  </div>
  <br>
<% end %>




<br>

<%= link_to 'New Picnic', new_picnic_path %>

</div>