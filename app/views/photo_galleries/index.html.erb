<div class="container">
    <div class="row">
        <% @photo_galleries.each do |gallery| %>
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2">
          <div class="gallery_name">
            <h3 class="center"><%= link_to gallery.picnic.name, gallery %></h3>
          </div>
           <% gallery.photos.take(4).each do |photo| %>
             <%= image_tag photo.image, width: 175 %>
           <% end %>
           </div>
          </div>
          <div class="col-sm-2 col-sm-offset-5">
          <%= link_to "More Photos", gallery, class: "gallery_btn btn perfect-red-button" %>
          </div>
        <hr class="h_rule">
        <% end %>
    </div>
</div>